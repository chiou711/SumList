<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/selectPageDlg"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:background="@drawable/background_fill"
		android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/show_folder_sum_progress"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorWhite"
		android:orientation="vertical" >
		<ProgressBar
			android:id="@+id/folder_sum_progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:visibility="invisible" />

		<TextView
			android:id="@+id/folder_sum_message"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:textSize="22sp"
			android:textStyle="bold"
			android:gravity="center"
			android:paddingStart="3dp"
			tools:ignore="RtlSymmetry" />
	</LinearLayout>

   	<TextView
		android:id="@+id/select_list_title"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:textSize="22sp" android:textStyle="bold"
		android:gravity="center_vertical"
		android:text="@string/config_select_pages_title"
		android:textColor="@color/colorWhite"
		android:textAppearance="?android:attr/textAppearanceLarge"
		 android:paddingLeft="5dp"
		 />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
   	<CheckBox
		android:id="@+id/check_box_select_all_pages_folder_sum"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
   	<TextView
        android:id="@+id/text_select_all_pages_folder_sum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
		android:layout_weight="1"
        android:text="@string/checked_notes_check_all"
        android:textSize="20sp"
		android:textColor="@color/colorWhite"
		android:paddingStart="5dp"
		android:paddingEnd="5dp"
        android:gravity="center_vertical"
		 />
	</LinearLayout>
   	<View android:layout_width="match_parent" android:layout_height="1dp" android:background="#4f4f4f" />

	 <GridView
		 android:id="@+id/folder_sum_grid_view"
		 android:layout_width="match_parent"
		 android:layout_height="0dp"
		 android:layout_weight="1"
		 android:horizontalSpacing="6dp"
		 android:numColumns="2"
		 android:verticalSpacing="6dp" />

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#4f4f4f" />

	 <LinearLayout
		 android:layout_width="match_parent"
		 android:layout_height="35dp"
		 android:background="@color/bar_color"
		 android:orientation="horizontal" >
		 <TextView
			 android:id="@+id/folderSumTitle"
			 android:layout_width="0dp"
			 android:layout_height="wrap_content"
			 android:layout_weight="1"
			 android:layout_gravity="start"
			 android:gravity="start"
			 android:text="@string/folder_sum"
			 android:textColor="@color/amber"
			 android:textSize="15sp"
			 android:layout_margin="5dp"/>
		 <TextView
			 android:id="@+id/textFolderSum"
			 android:layout_width="0dp"
			 android:layout_height="wrap_content"
			 android:layout_weight="2"
			 android:layout_gravity="start"
			 android:gravity="start"
			 android:text="0"
			 android:textColor="@color/amber"
			 android:textSize="15sp"
			 android:textStyle="bold"
			 android:layout_margin="5dp"/>

		 <Button
			 android:id="@+id/mail_pages"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_margin="3dp"
			 android:background="@drawable/button"
			 android:textColor="@android:color/white"
			 android:layout_gravity="center"
			 android:text="@string/mail" />
	 </LinearLayout>

